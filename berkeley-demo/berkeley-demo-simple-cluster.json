        "ImageId" : { "Fn::FindInMap" : [ "AWSRegionArch2AMI", { "Ref" : "AWS::Region" },
          { "Fn::FindInMap" : [ "AWSInstanceType2Arch", { "Ref" : "SRVInstanceType" }, "Arch" ] } ]},
        "SecurityGroupIds" : [{"Ref" : "PrivateSecurityGroup"}],
        "SubnetId" : {"Ref" : "PrivateSubnet"},
