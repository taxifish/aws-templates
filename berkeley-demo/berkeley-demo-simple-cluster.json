        "InstanceType" : {"Ref": "SRVInstanceType"},
        "PrivateIpAddress" : "10.0.10.21",
        "Tags": [
          { "Key": "Application", "Value": {"Ref": "AWS::StackId"} },
          { "Key": "Name", "Value" : "websocket-server-instance-01" }
        ]
      }
